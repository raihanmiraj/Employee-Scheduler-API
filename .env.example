# Server configuration
PORT=3000
NODE_ENV=production

# MongoDB connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/employee-scheduler?retryWrites=true&w=majority

# JWT configuration
JWT_SECRET=<your-super-secret-jwt-key>
JWT_EXPIRES_IN=24h

# Bcrypt configuration
BCRYPT_ROUNDS=12

# CORS configuration
CORS_ORIGIN=https://domain.com

# Logging level
LOG_LEVEL=info
